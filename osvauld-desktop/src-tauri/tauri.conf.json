{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "osvauld-desktop",
  "version": "0.1.0",
  "identifier": "com.osvauld.app",
  "build": {
    "beforeDevCommand": "cd ../extension && npm run dev:tauri",
    "beforeBuildCommand": "cd ../extension && npm run build:tauri",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../extension/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "osvauld-desktop",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}